<% provide :title, t("log_in") %>
<h1><%= t "log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>

      <%= form.label :password %>
      <%= link_to t("forgot.title2"), new_password_reset_path %>
      <%= form.password_field :password, class: "form-control" %>

      <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me %>
        <span><%= t "remember_me" %></span>
      <% end %>

      <%= form.submit t("log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "new_use" %> <%= link_to t("sign_up_now"), signup_path %></p>
  </div>
</div>

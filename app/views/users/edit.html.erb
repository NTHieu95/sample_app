<% provide :title, t("users.edit_user") %>
<% provide :button_text, t("users.save") %>
<h1><%= t "update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t "change" %></a>
    </div>
  </div>
</div>

<% user ||= current_user %>
<div class="stats">
  <%=link_to relationships_path id: user.id, type: "following" do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <%= t "follow.following" %>
  <% end %>
  <%= link_to relationships_path id: user.id, type: "followers" do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <%= t "follow.followers" %>
  <% end %>
</div>
